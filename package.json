{
  "name": "@smaiill/trin",
  "version": "0.0.3",
  "description": "small typesafe translation lib. (wip)",
  "files": [
    "dist"
  ],
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "lib:dev": "tsup --config scripts/dev.js",
    "lib:build": "pnpm lint && tsup --config scripts/build.js",
    "test:dev": "vitest",
    "test:run": "vitest run",
    "lint": "tsc",
    "ci": "pnpm lint && pnpm test:run",
    "publish": "npm publish",
    "format": "prettier --write ."
  },
  "license": "MIT",
  "devDependencies": {
    "prettier": "2.8.4",
    "tsup": "6.6.3",
    "typescript": "4.9.5",
    "vitest": "0.28.5"
  }
}